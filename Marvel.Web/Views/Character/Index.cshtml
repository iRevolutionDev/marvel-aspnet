@model Marvel.Application.Queries.Character.GetCharacters.CharacterDto?

@{
    ViewData["Title"] = $"Character - {Model?.Name}";
}

@if (Model == null)
{
    await Html.RenderPartialAsync("Partials/_NotFound");
    return;
}

<div class="flex flex-row gap-4 p-4 w-full h-screen">
    <div class="flex flex-col gap-4">
        <h1 class="text-4xl font-bold text-gray-800">@Model?.Name</h1>
        <p class="text-gray-600">
            @if (!string.IsNullOrEmpty(Model?.Description))
            {
                @Model.Description
            }
            else
            {
                <span class="italic">No description available.</span>
            }
        </p>
    </div>
    
    <img class="rounded-lg object-cover h-full" src="@Model?.Thumbnail.Url" alt="@Model?.Name" />
</div>